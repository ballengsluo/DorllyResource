
<div class="imgContainer">
    @if (ViewBag.img != null)
    {
        var imgList = ViewBag.img as List<T_ResourceImg>;
        foreach (var item in imgList)
        {
            <div class="imgbox" data-covert="@item.IsCover">
                <img src="@item.ImgUrl" />
                @if (ViewBag.check == null)
                {
                    <span class="imgdel" title="删除" data-id="@item.ID">
                        <i class="layui-icon layui-icon-close" style="color:#ff0000;"></i>
                    </span>
                    <label class="imgset" title="设置封面" for="@item.ID">
                        <input type="radio" name="covert" id="@item.ID" data-rid="@item.ResourceID" />
                    </label>
                }
            </div>
        }
    }
    @if (ViewBag.check == null)
    {
        <div class="addbox">
            <span>+</span>
            <input type="file" multiple name="resourceimg" />
            <label style="color: #ccc;font-size: 13px;position: absolute;bottom: 0;width: 100%;text-align: center;">尺寸: 800px * 580px</label>
        </div>
    }

</div>