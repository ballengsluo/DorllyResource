@model Resource.Model.V_AD


@if (ViewBag.resource != null)
{
    <fieldset class="layui-elem-field layui-field-title" style="padding:0px;">
        <legend style="padding:0px; margin:0px;border-bottom:2px solid #0094ff;color:#f6850a;">基础资料</legend>
    </fieldset>
}
<div class="form-group">

</div>
<div class="form-group">
    <label class="control-label col-md-1">
        <font color="red" style="position:relative; top:3px;margin-right:3px;">*</font>所在园区
    </label>
    <div class="col-md-2">
        @{ Html.RenderAction("ParkDrop", "Drop", new { pid = "", id = Model.ParkID, model = 1 });}
    </div>
    <label class="control-label col-md-1">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>广告位编号
    </label>
    <div class="col-md-2">
        @if (string.IsNullOrEmpty(Model.ID))
        {
            <input type="text" class="form-control" name="ID" id="id" placeholder="必填项" required maxlength="50">
        }
        else
        {
            <input type="text" class="form-control" name="ID" id="id" placeholder="必填项" value="@Model.ID" readonly>
        }
        @*<input type="text" class="form-control" name="ID" id="id" value="@Model.ID">*@
    </div>
    <label class="control-label col-md-1">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>广告位名称
    </label>
    <div class="col-md-2">
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div>
</div>


<div class="form-group">
    <label class="control-label col-md-1">
        <font color="red" style="position:relative; top:3px;margin-right:1px;">*</font>广告位类型
    </label>
    <div class="col-md-2">
        @{ Html.RenderAction("ResourceTypeDrop", "Drop", new { kind = 4, id = Model.ResourceTypeID, model = 1 });}
    </div>
    <label class="control-label col-md-1">规格</label>
    <div class="col-md-2">
        <input type="text" class="form-control" name="Size" value="@Model.Size">
    </div>
    <label class="control-label col-md-1">
        <font color="red" style="position:relative; top:3px;margin-right:5px;">*</font>押金
    </label>
    <div class="col-md-2">
        <input type="number" class="form-control" name="Deposit" value="@Model.Deposit">
    </div>
    <label class="control-label col-md-1">资源分组</label>
    <div class="col-md-2">
        <input type="hidden" name="ResourceKindID" value="4" />
        @{ Html.RenderAction("GroupDrop", "Drop", new { kind = 4, id = Model.GroupID, model = 1 });}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-1">位置</label>
    <div class="col-md-11">
        <input type="text" class="form-control" name="Location" onmouseover="this.title=this.value" value="@Model.Location">
    </div>
</div>
@{Html.RenderPartial("_PriceAD");}
<div class="form-group">
    <label class="control-label col-md-1">上传图片</label>
    <div class="col-md-11">
        @Html.Partial("_ResourceImg")
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-1">资源详情</label>
    <div class="col-md-11">
        <script id="Content" name="Content" type="text/plain">
            @Html.Raw(Model.Content)
        </script>
    </div>
</div>

<div class="cmtdiv col-md-offset-1">
    <input type="submit" class="btn btn-primary" data-url="@Url.Action("AddOrUpdate")" value="保存">
    <input type="button" class="btn btn-danger" value="关闭" onclick="javascript: parent.layer.closeAll();">
</div>
