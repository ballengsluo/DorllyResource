@{ T_ResourcePrice price = ViewBag.price as T_ResourcePrice;}
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">计价方式</label>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <label class="checkbox-inline">
            @Html.CheckBox("ISingleEnable", Convert.ToBoolean(price.ISingleEnable))
            <span>按/个/月</span>
        </label>
        <label class="checkbox-inline">
            @Html.CheckBox("OnceEnable", Convert.ToBoolean(price.OnceEnable))
            <span>按/一口价</span>
        </label>
        <label class="checkbox-inline">
            @Html.CheckBox("OtherEnable", Convert.ToBoolean(price.OtherEnable))
            <span>按/其他</span>
        </label>        
    </div>
</div>
