<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">发布等级</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="text" class="form-control" name="Level" id="Level" value="@Model.Level" required placeholder="数字越小等级越高">
    </div>    
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">发布渠道</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <label class="checkbox-inline">
            @Html.CheckBox("AZWEnable", Model.AZWEnable) 艾众网
        </label>
        <label class="checkbox-inline">
            @Html.CheckBox("AZGJEnable", Model.AZGJEnable) 艾众管家
        </label>
        <label class="checkbox-inline">
            @Html.CheckBox("ZYPTEnable", true) 资源平台Web
        </label>
    </div>
</div>
    


