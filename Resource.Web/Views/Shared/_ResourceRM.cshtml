@model Resource.Model.V_RM

@if (ViewBag.resource != null)
{
    <fieldset class="layui-elem-field layui-field-title" style="padding:0px;">
        <legend style="padding:0px; margin:0px;border-bottom:2px solid #0094ff;color:#f6850a;">基础资料</legend>
    </fieldset>
}
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>房间编号
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="text" class="form-control" name="ID" id="id" value="@Model.ID" required readonly maxlength="50">
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>房间号
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="text" class="form-control" name="Name" id="name" placeholder="必填项" value="@Model.Name" required maxlength="50">
    </div>
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>园区
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @{ Html.RenderAction("ParkDrop", "Drop", new { pid = "", id = Model.ParkID, model = 1 });}
    </div>
</div>
<div class="form-group">

    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>建设期
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @{ Html.RenderAction("StageDrop", "Drop", new { pid = Model.ParkID, id = Model.StageID, model = 1 });}
    </div>
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>楼栋
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @{ Html.RenderAction("BuildingDrop", "Drop", new { pid = Model.StageID, id = Model.BuildingID, model = 1 });}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>楼层
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @{ Html.RenderAction("FloorDrop", "Drop", new { pid = Model.BuildingID, id = Model.ParentID, model = 1 });}
    </div>
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>出租类型
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="hidden" name="ResourceKindID" value="1" />
        @{ Html.RenderAction("ResourceTypeDrop", "Drop", new { kind = 1, id = Model.ResourceTypeID, model = 1 });}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">
        <font color="red" style="position:relative; top:3px;margin-right:2px;">*</font>出租面积
    </label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="number" class="form-control" name="RentArea" placeholder="必填项" value="@Model.RentArea" required>
    </div>
    <label class="control-label col-lg-2 col-md-2 col-sm-2">楼栋面积</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="text" class="form-control" name="Area" value="@Model.Area">
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">可租面积</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="text" class="form-control" name="RangeArea" value="@Model.RangeArea">
    </div>
    <label class="control-label col-lg-2 col-md-2 col-sm-2">起租面积</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="number" class="form-control" name="StartArea" value="@Model.StartArea">
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">资源分组</label>
    <div class="col-lg-4 col-md-4 col-sm-4">
        @{ Html.RenderAction("GroupDrop", "Drop", new { kind = 1, id = Model.GroupID, model = 1 });}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">位置</label>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <input type="text" class="form-control" name="Location" value="@Model.Location" placeholder="请填写位置信息">
    </div>
</div>

@{Html.RenderPartial("_PriceRM");}

<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">上传图片</label>
    <div class="col-lg-10 col-md-10 col-sm-10">
        @{Html.RenderPartial("_ResourceImg");}
    </div>
</div>
<div class="form-group">
    <label class="control-label col-lg-2 col-md-2 col-sm-2">资源详情</label>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <script id="Content" name="Content" type="text/plain">
            @Html.Raw(Model.Content)
        </script>
    </div>
</div>
@if (ViewBag.check == null)
{
    <div class="cmtdiv col-md-offset-1">
        <input type="submit" class="btn btn-primary" data-url="@Url.Action("AddOrUpdate")" value="保存">
        <input type="button" class="btn btn-danger" value="关闭" onclick="javascript: parent.layer.closeAll();">
    </div>
}
