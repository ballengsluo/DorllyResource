@{ T_ResourcePrice price = ViewBag.price as T_ResourcePrice;}
<div class="price">
    <div class="form-group">
        <label class="control-label col-md-1">计价方式</label>
        <label class="control-label col-md-2 priceLabel">
            @Html.CheckBox("MeterEnable", Convert.ToBoolean(price.MeterEnable))
            <span>按/平米/每月</span>
        </label>
        <label class="control-label col-md-1">最低价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="MeterMinPrice" value="@price.MeterMinPrice">
        </div>
        <label class="control-label col-md-1">最高价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="MeterMaxPrice" value="@price.MeterMaxPrice">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-md-offset-1 priceLabel">
            @Html.CheckBox("ISingleEnable", Convert.ToBoolean(price.ISingleEnable))
            <span>按/每个/每月</span>
        </label>
        <label class="control-label col-md-1">最低价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="ISingleMinPrice" value="@price.ISingleMinPrice">
        </div>
        <label class="control-label col-md-1">最高价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="ISingleMaxPrice" value="@price.ISingleMaxPrice">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-md-offset-1 priceLabel">
            @Html.CheckBox("OnceEnable", Convert.ToBoolean(price.OnceEnable))
            <span>按/一口价</span>
        </label>
        <label class="control-label col-md-1">最低价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="OnceMinPrice" value="@price.OnceMinPrice">
        </div>
        <label class="control-label col-md-1">最高价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="OnceMaxPrice" value="@price.OnceMaxPrice">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 col-md-offset-1 priceLabel">
            @Html.CheckBox("OtherEnable", Convert.ToBoolean(price.OtherEnable))
            <span>按/其他</span>
        </label>
        <label class="control-label col-md-1">最低价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="OtherMinPrice" value="@price.OtherMinPrice">
        </div>
        <label class="control-label col-md-1">最高价格</label>
        <div class="col-md-2">
            <input type="number" class="form-control" name="OtherMaxPrice" value="@price.OtherMaxPrice">
        </div>
    </div>

</div>