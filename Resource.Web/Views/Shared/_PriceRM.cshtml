            <input type="number" class="form-control" name="MeterMinPrice" value="@price.MeterMinPrice" placeholder="最低价格/平米/月">
        </div>
        <label class="control-label col-lg-2 col-md-2 col-sm-2">最高价格/平米/月</label>
