@model List<Resource.Model.T_RoleFunc>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户管理</title>
    @Styles.Render("~/Plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Plugins/layui/css/layui.css")
    @Styles.Render("~/Plugins/bootstrap-select/css/bootstrap-select.min.css")
    @Styles.Render("~/Plugins/app/css/app.index.css")
</head>
<body>
    <div class="container">
        @Html.Partial("_FuncPage", Model)
        @*<div class="func-action">
            <button type="button" class="btn btn-primary" id="add"><i class="glyphicon glyphicon-plus"></i>&nbsp;新增</button>
            <button type="button" class="btn btn-primary" id="edit"><i class="glyphicon glyphicon-edit"></i>&nbsp;编辑</button>
            <button type="button" class="btn btn-danger" id="del"><i class="glyphicon glyphicon-trash"></i>&nbsp;删除</button>
            <button type="button" class="btn btn-success" id="open"><i class="glyphicon glyphicon-ok"></i>&nbsp;启用</button>
            <button type="button" class="btn btn-warning" id="close"><i class="glyphicon glyphicon-remove"></i>&nbsp;停用</button>
            <button type="button" class="btn btn-info" id="reset"><i class="glyphicon glyphicon-refresh"></i>&nbsp;重置密码</button>
            <button type="button" class="btn btn-info" id="role"><i class="glyphicon glyphicon-cog"></i>&nbsp;绑定角色</button>
        </div>*@
        <div class="select-action">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="input-group">
                        <span class="input-group-addon">登录账户</span>
                        <input type="text" class="form-control" id="account">
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="input-group">
                        <span class="input-group-addon">用户名称</span>
                        <input type="text" class="form-control" id="name">
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon">创建时间</span>
                        <input type="text" class="form-control pull-right" id="time">
                    </div>

                </div>
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="input-group">
                        <span class="input-group-addon">状态</span>
                        <select class="selectpicker form-control pull-righ" id="enable">
                            <option value="">全部</option>
                            <option value="false">停用</option>
                            <option value="true">启用</option>
                        </select>
                    </div>
                </div>
                @*<div class="col-lg-2 col-md-2 col-sm-2">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input type="text" class="form-control pull-right" id="EndTime">
                        </div>
                    </div>*@
                <div class="col-lg-2 col-md-2 col-sm-2">
                    <button type="button" class="btn btn-primary" id="search" data-url="@Url.Action("Search")" style="font-size:15px;">
                        <i class="layui-icon layui-icon-search"></i> 查 询
                    </button>
                </div>
            </div>
        </div>
        <div class="data-action">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>登录账户</th>
                        <th>用户名称</th>
                        <th>联系电话</th>
                        <th>联系邮箱</th>
                        <th>通讯地址</th>
                        <th>创建日期</th>
                        <th>用户状态</th>
                    </tr>
                </thead>
                <tbody id="tb"></tbody>
            </table>
            <div id="page"></div>
        </div>
    </div>
    <script id="tableTpl" type="text/html">
        {{each data value i}}
        <tr>
            <td>{{i+1}}</td>
            <td class="key">{{value.Account}}</td>
            <td>{{value.UserName}}</td>
            <td>{{value.Phone}}</td>
            <td>{{value.Email}}</td>
            <td>{{value.Addr}}</td>
            <td>{{value.CreateDate}}</td>
            <td class="enable" data-enable="{{value.Enable}}">
                {{if value.Enable==0}}停用
                {{else}}启用
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </script>

    @Scripts.Render("~/Plugins/jquery/jquery-2.2.4.js")
    @Scripts.Render("~/Plugins/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Plugins/layui/layui.js")
    @Scripts.Render("~/Plugins/bootstrap-select/js/bootstrap-select.min.js")
    @Scripts.Render("~/Plugins/artTemplate/template-web.js")
    @Scripts.Render("~/Plugins/app/js/app.common.js")
    @Scripts.Render("~/Plugins/app/js/app.index.js")
    <script>
        function paramsSet() {
            return obj = {
                Code: $('#account').val(),
                Name: $('#name').val(),
                Enable: $('#enable').val(),
                BeginTime: $.trim($('#time').val().split('~')[0]),
                EndTime: $.trim($('#time').val().split('~')[1]),
                PageIndex: currentNum,
                PageSize: limitCount
            }
        };
        $(function () {
            layui.use('laydate', function () {
                var laydate = layui.laydate;
                laydate.render({
                    elem: '#time',
                    range: '~'//指定元素
                });
            });
        });
    </script>
</body>
</html>
