@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>广告位销控</title>
    @Styles.Render("~/Plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Plugins/layui/css/layui.css")
    @Styles.Render("~/Plugins/bootstrap-select/css/bootstrap-select.min.css")
    @Styles.Render("~/Plugins/app/css/app.index.css")
    <style>
    </style>
</head>
<body>
    <div class="container">
        <div class="select-action">
            <div class="row">
                <div class="col-md-2" style="margin-left:0px;padding-left:0px;">
                    <div class="input-group">
                        <span class="input-group-addon">园区</span>
                        @{ Html.RenderAction("ParkDrop", "Drop", new { pid = "", id = "", model = 1 });}
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">资源编号</span>
                        <input type="text" class="form-control" id="id">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">资源名称</span>
                        <input type="text" class="form-control" id="name">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">资源分组</span>
                        <input type="text" class="form-control" id="group">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">客户名称</span>
                        <input type="text" class="form-control" id="cust">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">状态</span>
                        <select class="selectpicker form-control pull-righ" id="status" title="请选择...">
                            <option value="">全部</option>
                            <option value="1">已租</option>
                            <option value="2">空闲</option>
                            <option value="3">预定</option>
                            <option value="4">预留</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-primary" id="search" data-url="@Url.Action("Search")" style="font-size:15px;">
                        <i class="layui-icon layui-icon-search"></i> 查 询
                    </button>
                </div>
            </div>

            <div class="data-action">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>资源编号</th>
                            <th>资源名称</th>
                            <th>资源分组</th>
                            <th>资源尺寸</th>
                            <th>资源位置</th>
                            <th>客户名称</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody id="tb"></tbody>
                </table>
                <div id="page"></div>
            </div>
        </div>
    </div>
    <script id="tableTpl" type="text/html">
        {{each data value i}}
        <tr>
            <td>{{i+1}}</td>
            <td class="key">{{value.ID}}</td>           
            <td>{{value.Name}}</td>
            <td>{{value.GroupName}}</td>
            <td>{{value.Size}}</td>
            <td>{{value.Location}}</td>
            <td>{{value.CustName}}</td>
            <td class="status" data-enable="{{value.Status}}">
                {{if value.Status==1}}占用
                {{else if value.Status==2}}空闲
                {{else if value.Status==3}}预定
                {{else}}预留
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </script>
    @Scripts.Render("~/Plugins/jquery/jquery-2.2.4.js")
    @Scripts.Render("~/Plugins/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Plugins/layui/layui.js")
    @Scripts.Render("~/Plugins/bootstrap-select/js/bootstrap-select.min.js")
    @Scripts.Render("~/Plugins/artTemplate/template-web.js")
    @Scripts.Render("~/Plugins/app/js/app.common.js")
    @Scripts.Render("~/Plugins/app/js/app.index.js")
    <script>
        function paramsSet() {
            return obj = {
                Park: $("#park").val(),
                ID: $("#id").val(),
                Name: $("#name").val(),
                Group: $("#group").val(),
                Cust: $("#cust").val(),
                Status: $("#status").val(),
                PageIndex: currentNum,
                PageSize: limitCount
            };
        };
    </script>
</body>
</html>
