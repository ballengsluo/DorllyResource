<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑楼层</title>
    @Styles.Render("~/common/css")
    @Styles.Render("~/app/css")
</head>
<body>
    <div class="container">
        <div style="max-width:400px;margin:0 auto;">
            <h3 style="margin:30px 0px;text-align:center">编辑楼层</h3>
            @using (Ajax.BeginForm("Edit", null, new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "commitResult",
                OnFailure = "commitResult"
            }, new { @class = "form-horizontal" }))
            {
                

                <div class="form-group">
                    <label class="control-label col-md-4">城市：</label>
                    <div class="col-md-8">
                        @Html.Action("GetDropData", "City", new { selectCode = Model[0].CityCode })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">区域：</label>
                    <div class="col-md-8">
                        @Html.Action("GetDropData", "Region", new { parentCode = "", selectCode = Model[0].RegionCode })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">园区：</label>
                    <div class="col-md-8">
                        @Html.Action("GetDropData", "Park", new { parentCode = "", selectCode = Model[0].ParkCode })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">建设期：</label>
                    <div class="col-md-8">
                        @Html.Action("GetDropData", "Stage", new { parentCode = "", selectCode = Model[0].StageCode })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">建筑：</label>
                    <div class="col-md-8">
                        @Html.Action("GetDropData", "Building", new { parentCode = "", selectCode = Model[0].BuildingCode })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">编码：</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="FloorCode" value="@Model[0].FloorCode">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-4">名称：</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="FloorName" value="@Model[0].FloorName">
                    </div>
                </div>
                <p style="text-align:center;margin:20px 0px;">
                    <input type="submit" class="btn btn-primary" value="提交">
                    <input type="button" class="btn btn-danger" value="关闭" onclick="javascript: parent.layer.closeAll();" style="margin-left:10px;">
                </p>
            }
        </div>
    </div>
    @Scripts.Render("~/common/js")
    <script src="~/Plugins/bootstrap-select/js/bootstrap-select.min.js"></script>
</body>
</html>
