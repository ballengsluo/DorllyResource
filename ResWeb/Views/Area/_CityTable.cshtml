
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>序号</th>
            <th>城市编码</th>
            <th>城市名称</th>
        </tr>
    </thead>
    <tbody>
        @{
            int id = 1;
            if (ViewBag.cityList != null)
            {
                foreach (var item in ViewBag.cityList)
                {
                    <tr>
                        <td class="pkey" style="display:none">@item.ID</td>
                        <td>@id</td>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                    </tr>
                    id++;
                }
            }
            else
            {
                <tr><td style="text-align:center" colspan="3">数据加载异常</td></tr>
            }
        }
    </tbody>
</table>
