
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加城市</title>
    @Styles.Render("~/common/css")
    @Styles.Render("~/app/css")
    @Styles.Render("~/user/css")
</head>
<body>
    <div class="container">
        <div style="max-width:400px;margin:0 auto;">
            <h3 style="margin:30px 0px;text-align:center">添加城市</h3>
            @using (Ajax.BeginForm("Create", null, new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "commitResult",
                OnFailure = "commitResult"
            }, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="control-label col-md-3">城市编码：</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" name="CityCode">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">城市名称：</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" name="CityName">
                    </div>
                </div>
                <p style="text-align:center;margin:20px 0px;">
                    <input type="submit" class="btn btn-primary" value="提交">
                    <input type="button" class="btn btn-danger"  value="取消" onclick="javascript: parent.layer.closeAll();" style="margin-left:10px;">
                </p>
            }
        </div>
    </div>
    @Scripts.Render("~/common/js")
</body>
</html>
