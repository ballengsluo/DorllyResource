@model List<Resource.Model.T_User>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户管理</title>
    @Styles.Render("~/common/css")
    @Styles.Render("~/user/css")
</head>
<body>
    <div class="container">


        @* 功能操作 *@
        <div class="func-action">
            <button type="button" class="btn btn-primary" id="insert"><i class="glyphicon glyphicon-plus"></i> 新增</button>
            <button type="button" class="btn btn-primary" id="edit"><i class="glyphicon glyphicon-edit"></i> 编辑</button>
            <button type="button" class="btn btn-danger" id="delete"><i class="glyphicon glyphicon-trash"></i> 删除</button>
            <button type="button" class="btn btn-success" id="open"><i class="glyphicon glyphicon-ok"></i> 启用</button>
            <button type="button" class="btn btn-warning" id="close" style="display:none"><i class="glyphicon glyphicon-remove"></i> 停用</button>
            <button type="button" class="btn btn-info" id="reset"><i class="glyphicon glyphicon-repeat"></i> 重置密码</button>
            <input type="hidden" id="chooseID" />
        </div>
        @* 查询操作 *@
        <div class="select-action">

            <div class="row">
                <div class="col-lg-2">
                    <div class="input-group">
                        <span class="input-group-addon">用户名称：</span>
                        <input type="text" class="form-control" id="userName" placeholder="" aria-describedby="sizing-addon2">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-addon">创建时间：</span>
                        <input id="createDate" type="text" class="form-control pull-right" placeholder="" aria-describedby="sizing-addon2">
                    </div>
                </div>
                <button type="button" id="select" class="btn btn-primary">查询</button>
            </div>

        </div>
        @* 数据展示 *@
        <div class="data-action">
            @Html.Partial("_UserTable", Model);
        </div>
    </div> @* end container *@
    @* 重置操作 *@
    <div class="form-action resetdiv" style="display:none;">
        <h3 style="text-align:center;margin-bottom:15px;">重置密码</h3>
        <form id="resetPwd">
            <div class="form-group">
                <span class="glyphicon glyphicon-lock"></span>
                <input type="password" class="form-control" name="pwd" id="pwd" placeholder="请输入密码">
            </div>
            <div class="form-group">
                <span class="glyphicon glyphicon-lock"></span>
                <input type="password" class="form-control" name="confirmPwd" id="confirmPwd" placeholder="请再次输入密码">
            </div>
            <div class="form-group">
                <input type="button" class="form-control" name="resetCommit" id="resetCommit" value="提&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;交">
            </div>
        </form>
    </div>
    @Scripts.Render("~/common/js")
    @Scripts.Render("~/user/js")
</body>
</html>
