@model List<Resource.Model.T_RGroup>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>资源分组管理</title>
    @Styles.Render("~/common/css")
    @Styles.Render("~/app/css")
</head>
<body>
    <div class="container">


        @* 功能操作 *@
        <div class="func-action">
            <button type="button" class="btn btn-primary" id="create"><i class="glyphicon glyphicon-plus"></i> 新增</button>
            <button type="button" class="btn btn-primary" id="edit"><i class="glyphicon glyphicon-edit"></i> 编辑</button>
            <button type="button" class="btn btn-danger" id="delete"><i class="glyphicon glyphicon-trash"></i> 删除</button>
            <button type="button" class="btn btn-success" id="open"><i class="glyphicon glyphicon-ok"></i> 启用</button>
            <button type="button" class="btn btn-warning" id="close" style="display:none"><i class="glyphicon glyphicon-remove"></i> 停用</button>
            <input type="hidden" id="chooseID" />
        </div>
        @* 查询操作 *@
        <div class="select-action">
            <div class="row">
                <div class="col-lg-2">
                    <div class="input-group">
                        <span class="input-group-addon">资源类别：</span>
                        @Html.DropDownList("type", ViewData["typeList"] as SelectList, new { @class = "selectpicker form-control pull-righ", @title = "请选择..." })
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="input-group">
                        <span class="input-group-addon">所属园区：</span>
                        @Html.DropDownList("park", ViewData["parkList"] as SelectList, new { @class = "selectpicker form-control pull-righ", @title = "请选择..." })
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="input-group">
                        <span class="input-group-addon">分组状态：</span>
                        @Html.DropDownList("status", ViewData["statusList"] as List<SelectListItem>, new { @class = "selectpicker form-control pull-righ", @title = "请选择..." })
                    </div>
                </div>
                <button type="button" id="select" class="btn btn-primary">查询</button>
            </div>
        </div>
        @* 数据展示 *@
        <div class="data-action">
            @Html.Partial("_GroupTable", Model)
        </div>
    </div> @* end container *@
    @* 重置操作 *@
    <div class="form-action groupdiv" style="display:none">
        <h3 id="op_title" style="text-align:center;margin-bottom:12px;">afafdsada</h3>
        <form id="g_form" class="form-horizontal">
            <div class="form-group" style="display:none">
                <label class="control-label col-md-4">ID：</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="groupid" id="groupid">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">分组编号：</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="groupCode" id="groupCode">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">分组名称：</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="groupName" id="groupName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">所属类别：</label>
                <div class="col-md-8">
                    @Html.DropDownList("f_type", ViewData["typeList"] as SelectList, new { @class = "selectpicker form-control pull-righ drop", @title = "请选择..." })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4">所属园区：</label>
                <div class="col-md-8">
                    @Html.DropDownList("f_park", ViewData["parkList"] as SelectList, new { @class = "selectpicker form-control pull-righ drop", @title = "请选择..." })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-4" style="visibility:hidden">提交数据：</label>
                <div class="col-md-8">
                    <input id="submit" type="button" class="btn btn-primary" value="提交">
                </div>
            </div>
        </form>
    </div>
    @Scripts.Render("~/common/js")
    <script src="~/Plugins/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/Plugins/app/js/app.group.js"></script>
</body>
</html>
