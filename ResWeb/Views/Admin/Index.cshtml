@model List<T_Menu>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Bundles/css")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="#" class="logo" data-toggle="push-menu" role="button">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">
                <b>多丽</b>
                </span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                   <img src="~/Content/img/dorllylogo.png" style="margin-right:5px;"/>
                <b>多丽空间</b>
                </span>
            </a>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Alexander Pierce</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> 退出</a>
                        <a href="#" class="dropdown-toggle">
                            <i class="fa fa-envelope-o"></i>
                            <span class="label label-success">4</span>
                        </a>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    @{
                        var topModel = Model.Where(p => p.Level == 1);
                        foreach (var item in topModel)
                        {
                            <li class="treeview">
                                <a href="#">
                                    <i class="@item.ClassName"></i> <span>@item.MenuName</span>
                                    <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                                </a>
                                <ul class="treeview-menu">
                                    @foreach (var item1 in Model.Where(p => p.MenuPID == item.MenuID))
                                    {
                                        <li><a href="#" data-href="" data-title="@item1.MenuName"> @item1.MenuName</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    }
                    @*<li class="active treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>系统管理</span>
                            <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="#" data-href="@Url.Action("Test","Admin")" data-title="译文"> 译文</a></li>
                        </ul>
                    </li>*@
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content-tabs">
                <button class="roll-nav roll-left tabLeft" onclick="scrollTabLeft()">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs menuTabs tab-ui-menu" id="tab-menu">
                    <div class="page-tabs-content">                        
                        <a href="#" class="menu_tab active" data-href="@Url.Action("Main","Admin")">
                        <span class="page_tab_title">我的桌面</span></a>
                    </div>
                </nav>
                <button class="roll-nav roll-right tabRight" onclick="scrollTabRight()">
                    <i class="fa fa-forward" style="margin-left: 3px;"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown tabClose" data-toggle="dropdown">
                        页签操作<i class="fa fa-caret-down" style="padding-left: 3px;"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right" style="min-width: 128px;">
                        <li><a class="tabReload" href="#">刷新当前</a></li>
                        <li><a class="tabCloseCurrent" href="#">关闭当前</a></li>
                        <li><a class="tabCloseAll" href="#">全部关闭</a></li>
                        <li><a class="tabCloseOther" href="#">除此之外全部关闭</a></li>
                    </ul>
                </div>
                <button class="roll-nav roll-right fullscreen">
                    <i class="fa fa-arrows-alt"></i>
                </button>
            </div>
            <div class="iframe-box ">
                <div class="tab-content" id="tab-content">
                    <div class="tab-pane active" data-href="@Url.Action("Main","Admin")" role="tabpanel">
                        <iframe src="@Url.Action("Main","Admin")" frameborder="0" scrolling="no"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.1.0
            </div>
            <strong>Copyright &copy; 2014-2016 <a href="#">轩仑科技</a>.</strong> All rights
            reserved.
        </footer>
    </div>
    @Scripts.Render("~/Bundles/js")
</body>
</html>
